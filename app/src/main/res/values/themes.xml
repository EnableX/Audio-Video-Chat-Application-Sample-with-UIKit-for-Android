<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UikitSampleApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="button" >
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/btnTextColor</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:padding">@dimen/padding_label</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="background">@drawable/btn_drawable</item>
    </style>
    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">@color/lt_grey</item>
        <item name="android:colorControlActivated">@color/appThemeColor</item>
        <item name="android:colorControlHighlight">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>
    <dimen name="height_button">48dp</dimen>
    <dimen name="button_text">17dp</dimen>
    <dimen name="padding_label">4dp</dimen>
    <color name="btnTextColor">#ffffff</color>

</resources>